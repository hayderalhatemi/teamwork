<div class="container">
  <h1>Login</h1>

  <% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
    <li><%= e.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/auth/login" method="post" class="form">
    <label for="email">Email</label>
    <input
      type="email"
      class="input"
      name="email"
      value="<%= form.email || '' %>"
      required
      placeholder="Email"
    />
    <label>
      Password
      <input
        type="password"
        class="input"
        name="password"
        required
        placeholder="Password"
      />
    </label>
    <br />
    <button type="submit">Login</button>
  </form>
  <p>No account yet? <a href="/auth/register">Register</a></p>
</div>
