<div class="container">
  <div class="col-sm-6">
    <img src="images/renthouse.jpg" alt="" />
  </div>
  <div class="col-sm-6">
    <h1>Add an apartment!</h1>
    <form
      class="form"
      action="/newHouse"
      method="post"
      enctype="multipart/form-data"
    >
      <label for="kind" class="labels">Kind</label>
      <input
        type="text"
        class="input"
        name="kind"
        required
        placeholder="Studio, house, villa..."
      />
      <label for="number_of_rooms" class="labels">Number of rooms</label>
      <input
        type="number"
        class="input"
        name="number_of_rooms"
        required
        placeholder="Number of rooms"
      />
      <label for="zipCode" class="labels">Zip Code</label>
      <input
        type="number"
        class="input"
        pattern="[0-9]{5}"
        name="zipCode"
        required
        placeholder="00000"
      />
      <label for="streetAddress" class="labels">Street Address</label>
      <input
        type="text"
        class="input"
        name="streetAddress"
        required
        placeholder="Example street 1"
      />
      <label for="rent_status" class="labels">Available to rent</label>
      <input type="checkbox" name="rent_status" value="true" />
      <label for="images" class="labels">Add images</label>
      <input type="file" name="images" multiple />
      <!-- important -->
      <input type="submit" name="submit" />
    </form>
  </div>
</div>
