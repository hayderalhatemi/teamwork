<div class="container">
  <h1>Edit House</h1>

  <form
    class="form"
    action="<%= `/houses/${house._id}?_method=PUT` %>"
    method="post"
    enctype="multipart/form-data"
  >
    <label>Kind</label>
    <input
      type="text"
      class="input"
      name="kind"
      value="<%= house.kind %>"
      required
    />

    <label>Number of rooms</label>
    <input
      type="number"
      class="input"
      name="number_of_rooms"
      value="<%= house.number_of_rooms %>"
      required
    />

    <label>Zip Code</label>
    <input type="number" name="zipCode" value="<%= house.zipCode %>" required />

    <label>Street Address</label>
    <input
      type="text"
      class="input"
      name="streetAddress"
      value="<%= house.streetAddress %>"
      required
    />

    <label>Rent Status</label>
    <input type="checkbox" class="input" name="rent_status" value="true" <%=
    house.rent_status ? "checked" : "" %> >

    <label>Add more images</label>
    <input type="file" name="images" multiple />

    <button class="button" type="submit">Update</button>
  </form>
</div>
