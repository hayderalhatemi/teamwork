<div class="container">
  <div class="list-container">
    <% Houses.forEach(s => { %>

      <div class="house">
        <!-- LEFT SIDE CONTENT -->
        <div class="house-content">
          <p>
            <span class="item-label">Kind:</span>
            <%= s.kind %>
          </p>

          <p>
            <span class="item-label">Number of rooms:</span>
            <%= s.number_of_rooms %>
          </p>

          <p>
            <span class="item-label">Zip Code:</span>
            <%= s.zipCode %>
          </p>

          <p>
            <span class="item-label">Street Address:</span>
            <%= s.streetAddress %>
          </p>

          <p>
            <span class="item-label">Rent status:</span>
            <%= s.rent_status ? "Rented" : "Available" %>
          </p>

          <!-- âœ… OWNER INFO -->
          <p>
            <span class="item-label">Owner:</span>
            <%= s.owner ? s.owner.username : "Unknown" %>
          </p>

          <p>
            <span class="item-label">House images:</span>
            <% s.images.forEach(img => { %>
              <img src="<%= img %>" alt="House Image" style="width:100px;height:100px;">
            <% }); %>
          </p>
        </div>

        <!-- RIGHT SIDE ACTIONS -->
        <div class="house-actions">
          <div class="center">
            <a class="button" href="<%= `/houses/${s._id}/edit` %>">
              Edit
            </a>
          </div>

          <div class="center">
            <form action="/houses/<%= s._id %>/delete?_method=DELETE" method="POST"
              onsubmit="return confirm('Are you sure you want to delete this house?')">
              <button type="submit" class="button">Delete</button>
            </form>
          </div>
        </div>
      </div>

    <% }); %>
  </div>
</div>
