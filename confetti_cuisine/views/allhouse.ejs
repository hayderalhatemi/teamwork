<div class="container">
  <div class="list-container">
    <% Houses.forEach(s => { %>

    <div class="house">
      <!-- LEFT SIDE CONTENT -->
      <div class="house-content">
        <span class="item-label">Kind:</span>
        <span class="=item-text"><%= s.kind %></span>

        <span class="item-label">Number of rooms:</span>
        <span class="=item-text"><%= s.number_of_rooms %></span>

        <span class="item-label">Zip Code:</span>
        <span class="=item-text"><%= s.zipCode %></span>

        <span class="item-label">Street Address:</span>
        <span class="=item-text"><%= s.streetAddress %></span>

        <span class="item-label">Rent status:</span><%= s.rent_status ? "Rented"
        : "Available" %>

        <!-- âœ… OWNER INFO -->
        <span class="item-label">Owner:</span>
        <span class="=item-text"
          ><%= s.owner ? s.owner.username : "Unknown" %>
        </span>
      </div>
      <div class="house-content">
        <% s.images.forEach(img => { %>
        <img
          src="<%= img %>"
          alt="House Image"
          style="width: 300px; height: 250px"
        />
        <% }); %>
      </div>
      <!-- RIGHT SIDE ACTIONS -->
      <div class="house-actions">
        <div class="center">
          <% if (currentUser) { %>
          <a href="<%= `/houses/${s._id}/edit` %>">
            <button class="button-edit">Edit</button>
          </a>
        </div>

        <div class="center">
          <form
            action="/houses/<%= s._id %>/delete?_method=DELETE"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete this house?')"
          >
            <button type="submit" class="button-delete">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
    </div>

    <% }); %>
  </div>
</div>
