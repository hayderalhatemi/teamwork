<div class="container">
  <h1>Register</h1>

  <% if (errors && errors.length) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
    <li><%= e.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/auth/register" method="post" class="form">
    <label>
      Name
      <input
        type="text"
        class="input"
        name="name"
        value="<%= form.name || '' %>"
        required
        placeholder="Name"
      />
    </label>
    <br />
    <label>
      Email
      <input
        type="email"
        class="input"
        name="email"
        value="<%= form.email || '' %>"
        required
        placeholder="Email"
      />
    </label>
    <br />
    <label>
      Password
      <input
        type="password"
        class="input"
        name="password"
        required
        placeholder="Password"
      />
    </label>
    <br />
    <button type="submit">Create account</button>
  </form>

  <p>Already have an account? <a href="/auth/login">Log in</a></p>
</div>
